#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

echo 'ğŸ—ï¸ğŸ‘· Checking your project before committing'


echo 'Checking findable-ui'

# Check Prettier
npm run check-format ||
(
    echo 'ğŸ¤” Prettier Check Failed. Run npx prettier --write . try commit again.';
    false;
)

# Check ESLint
npm run lint ||
(
    echo 'ğŸ¤”  ESLint Check Failed. Make the required changes listed above, add changes and try to commit again.'
    false; 
)

# Run tests
npm test ||
(
	echo 'Tests failed';
	false;
)

# Check Black (Python formatter)
python -m black backend --check ||
(
	echo 'ğŸ¤” Black Check Failed. Run: python -m black backend';
	false;
)

# Check TypeScript
npm run test-compile ||
(
	echo 'TypeScript compile failed';
	false;
)
echo 'TypeScript compile succeeded!'
